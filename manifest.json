  {
    "name": "hideFB",
    "version": "1.0",
    "description": "Hides the facebook stream unless you confirm to show it",
    "manifest_version": 2,
    "permissions": ["tabs", "*://*.facebook.com/*"],
    "content_scripts": [
      {
        "matches": ["*://*.facebook.com/", "*://*.facebook.com/?ref=*"],
        "js": ["script.js"]
      }
    ]
  }